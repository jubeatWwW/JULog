{
    "extends": ["tslint-config-airbnb", "tslint-react"],
    "rules": {
        "indent": [true, "spaces", 4],
        "ter-indent": [true, 4, { "SwitchCase": 2 }],
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case",
            "ban-keywords"
        ],
        "jsx-no-multiline-js": false,
        "jsx-curly-spacing": [true, "never", {
            "children": true
        }]
    }
}